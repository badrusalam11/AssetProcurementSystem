<!-- Modal Keranjang -->
<div class="modal fade" id="keranjangModel" tabindex="-1" aria-labelledby="keranjangModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Keranjang Saya</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" id="formRequest">
                    <div class="container">
                        <div class="row">
                            <div class="col-2">
                                <img class="figure-img img-fluid rounded"
                                     src="https://cdn.idntimes.com/content-images/community/2021/09/hp-pavilion-aero-13-625x417-c-824604e0f5644ad589807232cdcefaba-b5629d4e65d340d1d248280fbfec6568_600x400.jpg" alt="Alternate Text" />
                            </div>
                            <div class="col-8">
                                <p>Laptop Asus </p>
                            </div>

                            <div class="col text-center">
                                <a href="#" id="hapusKeranjang" style="cursor: pointer" onclick="hapusKeranjang()"><i class="fas fa-window-close fa-lg" style="color: darkred;"></i></a>
                                @*<button class="btn-danger"><i class="fas fa-trash"></i></button>*@
                            </div>

                        </div>

                        <div class="row mt-2">
                            <div class="col">
                                <input type="text" class="form-control" name="name" id="idbarang" value="" hidden />
                                <input type="text" class="form-control" name="name" id="iduser" value="" hidden />
                                <label>Keperluan</label>
                                <input type="text" class="form-control" name="keperluan" id="keperluan" value="" required />
                                <label>Dipinjam dari</label>
                                <input type="date" class="form-control" required />
                                <label>Hingga</label>
                                <input type="date" class="form-control" required />
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger" onclick="CancelRequest()">Batalkan Semua</button>
                        <button type="submit" class="btn btn-primary">Buat Permohonan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal Tambah barang -->
<div class="modal fade" id="tambahBarangModel" tabindex="-1" aria-labelledby="tambahBarangModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="barangModalTitle">Tambah Barang</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" id="formBarang">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col">
                                <label>Item Name</label>
                                <input type="text" id="barangName" value="" class="form-control" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label>Type</label>
                                <select id="barangTipe" class="form-select" required>
                                    @*<option selected>Choose..</option>*@
                                    <option value="1">Electronics</option>
                                    <option value="2">Office stationery(ATK)</option>
                                    <option value="3">Furniture</option>
                                </select>
                            </div>
                            <div class="col">
                                <label>Condition</label>
                                <input type="text" id="barangKeterangan" value="" class="form-control" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="barangDeskripsi">Description</label>
                                <textarea class="form-control" id="barangDeskripsi" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="barangGambar" class="form-label">Image</label>
                                <input class="form-control" type="file" id="barangGambar" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="submitBarang" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript" src="~/js/barang.js"></script>
}
