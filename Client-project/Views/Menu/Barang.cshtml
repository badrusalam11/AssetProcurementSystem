@{
    ViewData["Title"] = "Barang";
    Layout = "_LayoutDashboard";
}
<div class="text-end mt-0">
    <button class="btn btn-warning text-dark" onclick="Keranjang()" data-bs-toggle="modal" data-bs-target="#keranjangModel"><i class=" fas fa-shopping-cart" style="color: black;"></i>   My Cart</button>
</div>
<div class="white-box">
    <div class="row">
        <div class="col-6">
            <h1>List Barang</h1>
            <p id="inibarang"></p>
        </div>
        <div class="col text-end">
            <button id="addItem" type="button" class="btn btn-primary text-right" data-bs-toggle="modal" data-bs-target="#tambahBarangModel" onclick="showInsert()"><i class="fas fa-plus-circle"></i>   Add Item</button>
        </div>
    </div>
    <table id="Table" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Condition</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody class="TableBody">
            @*<tr>
                <td scope="col">1</td>
                <td scope="col">Laptop ASUS Zen 1234</td>
                <td scope="col">Elektronika</td>
                <td scope="col">Bagus</td>
                <td scope="col">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#detailModel"><i class="fas fa-info-circle"></i></button>
                        <button class="btn btn-success text-white me-2" onclick="insertKeranjang()"><i class="fas fa-cart-plus"></i></button>
                        <button class="btn btn-warning me-2" data-bs-toggle="modal" data-bs-target="#tambahBarangModel" onclick="showEdit()"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-danger text-white"><i class="fas fa-trash" onclick="deleteBarang()"></i></button>
                    </div>
                </td>
            </tr>*@
        </tbody>
    </table>
</div>


<!-- Modal Detail -->
<div class="modal fade" id="detailModel" tabindex="-1" aria-labelledby="detailModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Item Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <img id="detailImg" class="figure-img img-fluid rounded"
                                 @*src="~/img/asus.jpg"*@ 
                                 alt="Alternate Text" />
                        </div>
                        <div class="col-6">
                            <table>
                                <tr>
                                    <td>Name</td>
                                    <td>:</td>
                                    <td id="detailName"></td>
                                </tr>
                                <tr>
                                    <td>Category</td>
                                    <td>:</td>
                                    <td id="detailType"></td>
                                </tr>
                                <tr>
                                    <td>Condition</td>
                                    <td>:</td>
                                    <td id="detailKeterangan"></td>
                                </tr>


                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <p>Description :</p><textarea id="detailDeskripsi" class="form-control" rows="5" cols="15" readonly></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Keranjang -->
<div class="modal fade" id="keranjangModel" tabindex="-1" aria-labelledby="keranjangModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Keranjang Saya</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" id="formRequest">
                    <div class="container">
                        <div class="row" id="keranjangContent">
                            @*<div class="col-2">
                                <img id="keranjangImg" class="figure-img img-fluid rounded"
                                     src="~/img/asus.jpg" alt="Alternate Text" />
                            </div>
                            <div class="col-8">
                                <p id="keranjangNama">Laptop Asus </p>
                            </div>

                            <div class="col text-center">
                                <a href="#" id="hapusKeranjang" style="cursor: pointer" onclick="hapusKeranjang()"><i class="fas fa-window-close fa-lg" style="color: darkred;"></i></a>
                            </div>*@
                        </div>

                        <div class="row mt-2">
                            <div class="col">
                                <input type="text" class="form-control" name="AccountID" id="accountId" />
                                <label>Keperluan</label>
                                <input type="text" class="form-control" name="Keperluan" id="keperluan" value="" required />
                                <label>Dipinjam dari</label>
                                <input type="date" name="StartDate" id="startDate"  class="form-control" required />
                                <label>Hingga</label>
                                <input type="date" name="EndDate" id="endDate"  class="form-control" required />
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger" onclick="CancelRequest()">Batalkan Semua</button>
                        <button type="submit" class="btn btn-primary">Buat Permohonan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal Tambah barang -->
<div class="modal fade" id="tambahBarangModel" tabindex="-1" aria-labelledby="tambahBarangModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="barangModalTitle">Tambah Barang</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formBarang" enctype="multipart/form-data">
                <input type="text" id="barangId" name="ID" value="" class="form-control" hidden/>
                    <div class="container text-center">
                        <div class="row mb-2">
                            <div class="col">
                                <label>Item Name</label>
                                <input type="text" id="barangName" name="Name" value="" class="form-control" required />
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">
                                <label>Type</label>
                                <select id="barangTipe" name="TypeID" class="form-select" required>
                                    @*<option value="1">Electronics</option>
                                    <option value="2">Office stationery(ATK)</option>
                                    <option value="3">Furniture</option>*@
                                </select>
                            </div>
                            <div class="col">
                                <label>Condition</label>
                                <input type="text" id="barangKeterangan" name="Keterangan" value="" class="form-control" required />
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col">
                                <label for="barangDeskripsi">Description</label>
                                <textarea class="form-control" id="barangDeskripsi" name="Deskripsi" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="barangGambar" class="form-label">Image</label>
                                <br />
                                <img id="barangImg" class="figure-img img-fluid rounded w-25 border" src="file_you_choose">
                                <input class="form-control" name="Image"  onchange="file_changed()" type="file" id="barangGambar" value="" accept="image/*">
                                <input class="form-control" name="Image" type="text" id="barangGambar1" value="" accept="image/*" hidden>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="submitBarang" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript" src="~/js/barang.js"></script>
}
