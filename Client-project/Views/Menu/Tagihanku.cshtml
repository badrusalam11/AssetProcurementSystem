@{
    ViewData["Title"] = "Tagihanku";
    Layout = "_LayoutDashboard";
}

<div class="white-box">
    <div class="row">
        <div class="col-9">
            <h1>Tagihanku</h1>
        </div>
        <div class="col-3 text-end">
            <ul class="nav flex-column nav-pills mb-3">
                <li class="nav-item">
                    <a href="#active" data-bs-toggle="tab" aria-expanded="false" class="nav-link active">
                        <i class="mdi mdi-home-variant d-lg-none d-block me-1"></i>
                        <span class="d-none d-lg-block">Active Bills</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#history" data-bs-toggle="tab" aria-expanded="true"
                       class="nav-link">
                        <i class="mdi mdi-account-circle d-lg-none d-block me-1"></i>
                        <span class="d-none d-lg-block">History</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content">
        @*active table*@
        <div class="tab-pane show active" id="active">
            <table id="Table" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Date</th>
                        <th scope="col">Total Bill</th>
                        <th scope="col">Payment Status</th>
                        <th scope="col">Confirmation Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="TableBody">
                    <tr>
                        <td scope="col">1</td>
                        <td scope="col">28-01-2022</td>
                        <td scope="col" id="bill">Rp 50.000</td>
                        <td scope="col">Paid</td>
                        <td scope="col">Confirmed</td>
                        <td scope="col">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#detailModel"><i class="fas fa-info-circle"></i></button>
                                <button class="btn btn-success text-white" data-bs-toggle="modal" data-bs-target="#formModel"><i class="far fa-money-bill-alt"></i></button>
                            </div>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        @*history table*@
        <div class="tab-pane" id="history">
            <table id="historyTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Total Bill</th>
                        <th scope="col">Payment Status</th>
                        <th scope="col">Confirmation Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="TableBody">
                    <tr>
                        <td scope="col">1</td>
                        <td scope="col" id="bill">Rp 50.000</td>
                        <td scope="col">Paid</td>
                        <td scope="col">Confirmed</td>
                        <td scope="col">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#detailModel"><i class="fas fa-info-circle"></i></button>
                            </div>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>


<!-- Modal Detail -->
<div class="modal fade" id="detailModel" tabindex="-1" aria-labelledby="detailModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Bill Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        @*<div class="col-6">*@
                        <img class="figure-img img-fluid rounded"
                             src="https://apdovi.forum-vokasi.id/wp-content/uploads/2020/08/Bukti-Pembayaran-Seminar-3-APDOVI-ee6c8e1970d276252a4079f3f5aef6eb.jpeg" alt="Alternate Text" />
                        @*</div>*@
                        @*<div class="col-6">*@
                        <table>
                            <tr>
                                <td>Total Bill</td>
                                <td>:</td>
                                <td>Rp. 50.000</td>
                            </tr>
                            <tr>
                                <td>Payment Status</td>
                                <td>:</td>
                                <td>Paid</td>
                            </tr>
                            <tr>
                                <td>Confirmation Status</td>
                                <td>:</td>
                                <td>Confirmed</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Form-->
<div class="modal fade" id="formModel" tabindex="-1" aria-labelledby="formModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="barangModalTitle">Upload Payment Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" id="formBukti">
                    <div class="container text-center">
                        <div class="row mb-2">
                            <div class="col">
                                <b>Please make payment to the following number (BCA): 123565 (Maemunah)</b>
                            </div>
                        </div>

                        <div class="row ">
                            <div class="col">


                                @*<input class="form-control" type="file" id="barangGambar" accept="image/*">*@
                                <div class="image-upload-wrap">
                                    <input id="buktiGambar" class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                                    <div class="drag-text">
                                        <h3>UPLOAD YOUR MEMORANDUM TRANSFER (Bukti Transfer)</h3>
                                    </div>
                                </div>
                                <div class="file-upload-content">
                                    <img class="file-upload-image" src="#" alt="your image" />
                                    <div class="image-title-wrap">
                                        <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="submitBarang" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section scripts {
    <script type="text/javascript" src="~/js/tagihanku.js"></script>
}